@model Zlotowkarze.Models.Question

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Game";
}
<head>
    <title>Game</title>

    <style>
        .answer-button {
            height: 100px; 
            width: 300px; 
            margin: 20px 10px 0px 10px; 
            background-color: white; 
            border: solid 8px; 
            border-color: black;
            white-space: normal;
        }

        .question-box {
            margin: 0px 0px 0px 0px;
            padding: 10px 10px 10px 10px;
            height: 174px; 
            width: 500px; 
            border: solid 12px; 
            border-color: black; 
            text-align: center;
            font-size: 24px;
        }

        .coin-box {
            margin: 0px 0px 0px 80px;
            padding: 0px 0px 0px 0px;
            width: 415px;
            height: 174px;
            border: solid 12px;
            border-color: black;
        }
    </style>

    <script type="text/javascript">
        function OnAnswer1Click()
        {
            alert("Wybrano odpowiedz nr 1");
            location.reload();
        }

        function OnAnswer2Click() {
            alert("Wybrano odpowiedz nr 2");
            location.reload();
        }

        function OnAnswer3Click() {
            alert("Wybrano odpowiedz nr 3");
            location.reload();
        }

        function OnAnswer4Click() {
            alert("Wybrano odpowiedz nr 4");
            location.reload();
        }
    </script>
</head>

<body>
    <div class="container" style="margin-left: 50px; margin-right: 10px;">
        <img src="~/App_Images/sir.png" style="width: 140px; height: 190px; float:left;" /> 
        <div class="col col-lg-5 question-box">
            <h4>@Html.DisplayFor(model => model.Content)</h4>
        </div>
        <div class="col col-lg-5 coin-box">
            <img src="~/App_Images/zlotowka.png" />
            <img src="~/App_Images/zlotowka.png" />
            <img src="~/App_Images/zlotowka.png" />
            <img src="~/App_Images/zlotowka.png" />
            <img src="~/App_Images/zlotowka.png" />
            <img src="~/App_Images/zlotowka.png" />
            <img src="~/App_Images/zlotowka.png" />
            <img src="~/App_Images/zlotowka.png" />
        </div>
    </div>
    <div class="col col-lg-12" style="margin-top: 50px;"></div>
    <div class="col col-lg-5 col-lg-offset-1">
        <img src="~/App_Images/challenge-prawo.png" style="height: 160px; width: 100px;" />
        <input type="submit" value="Odpowiedź nr 1" class="answer-button" onclick="OnAnswer1Click()"/>
    </div>
    <div class="col col-lg-5 col-lg-offset-1">
        <input type="submit" value="Odpowiedź nr 2" class="answer-button" onclick="OnAnswer2Click()" />
        <img src="~/App_Images/challenge-lewo.png" style="height: 160px; width: 100px;" />
    </div>
    <div class="col col-lg-6" style="margin-top: 40px;"></div>
    <div class="col col-lg-6" style="margin-top: 40px;"></div>
    <div class="col col-lg-5 col-lg-offset-1">
        <img src="~/App_Images/challenge-prawo.png" style="height: 160px; width: 100px;" />
        <input type="submit" value="Odpowiedź nr 3" class="answer-button" onclick="OnAnswer3Click()" />
    </div>
    <div class="col col-lg-5 col-lg-offset-1">
        <input type="submit" value="Odpowiedź nr 4" class="answer-button" onclick="OnAnswer4Click()" />
        <img src="~/App_Images/challenge-lewo.png" style="height: 160px; width: 100px;" />
    </div>
</body>